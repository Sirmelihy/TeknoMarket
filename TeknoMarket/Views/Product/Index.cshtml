@model List<TeknoMarket.Models.Product>
@using System.Collections.Generic
@using TeknoMarket.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/vendor/HomePage.css" rel="stylesheet" />


@{
    string name = Model[0].name;
    int ilkBoslukIndex = name.IndexOf(' ');
    string ilkYazi = name.Substring(0, ilkBoslukIndex);
}

<section class="pb-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-sm-6">
                <img class="card-img-top mb-5 mb-md-0" src="@Model[0].imageUrl" alt="@Model[0].name" />
            </div>
            <div class="col-sm-6" style="margin-top:5%">

                <h1 class="display-6 fw-bolder">@Model[0].name</h1>
                <div class="small mb-1">Ürün Kodu: 000 @Model[0].Id</div>
                <div class="fs-5 mb-3">
                    <span class="text-decoration-line-through">@(Model[0].price+Model[0].price*18/100)₺ </span>
                    <span class="ms-3 h4" style="font-size:40px">@Model[0].price.ToString("#,##0")₺</span>
                </div>
                <div>
                    <hr />
                </div>
                <div>
                    <div class="row">
                        <div class="col">
                            <p>Ürün Tipi:</p>
                        </div>
                        <div class="col">
                            <p>@Model[0].category_name</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p>Ürün Markası:</p>
                        </div>
                        <div class="col">
                            <p>@ilkYazi</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p>Stok :</p>
                        </div>
                        <div class="col">
                            <p>@Model[0].stock</p>
                        </div>
                    </div>

                </div>
                <div>
                    <hr />
                </div>
                <p class="lead"> @Model[0].description </p>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Sepete Ekle
                    </button>
                </div>
            </div>
        </div>
        <div class="mt-5">
            <h1 class="display-6 fw-bolder mb-3">ÇOK SATANLAR</h1>
            <div class="row">

                @{
                    List<Product> list = ViewBag.getList;
                }
                @Html.Partial("cokSatanlar", list)
            </div>
        </div>

        <iframe class="mt-5" style="width:100%;height:40rem;" src="https://www.youtube.com/embed/ehbmC1irQuY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
        <img class="mt-5" src="~/Images/ip14ad.jpg" />

    </div>
</section>

